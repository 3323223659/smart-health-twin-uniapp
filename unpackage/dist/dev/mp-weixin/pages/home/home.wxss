/* 文章场景相关 */
.page-container {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 0;
  background: #ffffff;
}
.navbar {
  position: relative;
  display: flex;
  flex-direction: column;
  padding-top: 20px;
}
.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.text-area {
  width: 100%;
  height: 350rpx;
}
.swiper {
  width: 100%;
  height: 350rpx;
}
.swiper-item {
  width: 100%;
  height: 100%;
}
.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
/* 图标容器 */
.icon-container {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 30rpx;
  /* 调整与轮播图之间的间隔 */
}
.icon {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* 使图标和文字居中 */
  justify-content: center;
  /* 垂直居中 */
}
.icon-image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
.icon-text {
  font-size: 28rpx;
  color: #333;
}
