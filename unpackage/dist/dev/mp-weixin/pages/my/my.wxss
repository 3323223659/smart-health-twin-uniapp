page {
  width: 100%;
  height: 100%;
  overflow: auto;
}
.page-container {
  height: 550rpx;
  background: linear-gradient(to bottom, #44cf9a 0%, white 100%);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 0;
}
.navbar {
  background-size: cover;
  position: relative;
  display: flex;
  flex-direction: column;
  padding-top: 60rpx;
}
.my {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.userInfo {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 90rpx 0 40rpx 0;
}
.userInfo .avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
}
.userInfo .avatar image {
  width: 100%;
  height: 100%;
}
.userInfo .name {
  font-size: 45rpx;
  color: #333;
  padding: 20rpx 0 10rpx;
}
.userInfo .address {
  font-size: 30rpx;
  color: #808080;
}
.section {
  width: 690rpx;
  margin: 30rpx auto;
  border: 1px solid #eee;
  border-radius: 30rpx;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.1);
}
.section .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 100rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}
.section .row .customer {
  position: absolute;
  top: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  opacity: 0;
}
.section .row:last-child {
  border-bottom: 0;
}
.section .row .right {
  display: flex;
  align-items: center;
}
.section .row .left {
  display: flex;
  align-items: center;
}
.section .row .left .icon {
  width: 48rpx;
  height: 48rpx;
}
.section .row .left .text {
  padding-left: 20rpx;
  color: #333;
  font-size: 30rpx;
}
